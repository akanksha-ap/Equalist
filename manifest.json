{
  "manifest_version": 3,
  "name": "Vision Ease",
  "version": "1.1",
  "description": "A Chrome extension to help People with visual disabilities.",
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  
  "host_permissions": [
  "https://translation.googleapis.com/*"
]
}
